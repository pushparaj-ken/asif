# Build the docker image with `npx nx docker-build asif`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t asif`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system asif && \
          adduser --system -G asif asif

COPY dist/apps/asif asif/
RUN chown -R asif:asif .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix asif --omit=dev -f install

CMD [ "node", "asif" ]
